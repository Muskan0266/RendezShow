<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking</title>
    <link rel="stylesheet" href="/output.css">
    <link rel="stylesheet" href="/09_style.css">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>


<body class="text-white">
    <!-- navbar -->

    <header>
        <nav class="w-full">
            <ul class=" flex items-baseline">
                <div class="ml-5 mt-3 sm:mt-auto">
                    <li class="text-sm sm:text-2xl">Rendez<span class="text-pink-500">Show</span></li>
                </div>
                <div class="event_name ml-20 sm:ml-45 text-sm sm:pt-5 ">
                    <%= event.name %>
                </div>






        </nav>
    </header>

    <main>


        <div class=" block sm:flex justify-around mt-7 sm:mt-3 h-100 sm:h-auto"> <!-- Details div-->



            <div class="h-63 w-60 border-2  border-[#0f172a] rounded-lg bg-white mt-15 sm:mt-15 ml-22 sm:ml-0">



                <section class="date flex font-normal text-black mt-3 ml-3 text-xs">
                    <span class="material-symbols-outlined text-black text-lg">calendar_month</span>
                    <p class="ml-2">
                        <%= event.date %>
                    </p>
                </section>

                <section class="time  flex font-normal text-black mt-1 ml-3 text-xs"><span
                        class="material-symbols-outlined text-black">
                        nest_clock_farsight_analog</span>
                    <p class="ml-2">
                        <%= event.time %>
                    </p>
                </section>

                <section class="duration  flex font-normal text-black mt-1 ml-3 text-xs"><span
                        class="material-symbols-outlined text-black">
                        hourglass</span>
                    <p class="ml-2">
                        <%= event.duration %>
                    </p>
                </section>

                <section class="age  flex font-normal text-black mt-1 ml-2 text-xs"><span
                        class="material-symbols-outlined text-black">boy
                    </span>
                    <p class="ml-2">
                        <%= event.age %>
                    </p>
                </section>

                <section class="lang flex font-normal text-black mt-1 ml-3 text-xs"><span
                        class="material-symbols-outlined text-black">dictionary</span>
                    <p class="ml-2">
                        <%= event.language %>
                    </p>
                </section>

                <section class="genre flex font-normal text-black mt-1 ml-3 text-xs"><span
                        class="material-symbols-outlined text-black">
                        comedy_mask </span>
                    <p class="ml-2">
                        <%= event.genre %>
                    </p>
                </section>

                <section class="location  flex font-normal text-black mt-1 ml-3 text-xs"><span
                        class="material-symbols-outlined text-black">distance</span>
                    <p class="ml-2">
                        <%= event.venue %>
                    </p>
                </section>
                <hr class="border-1 border-gray-300">
                <p class="mt-3 text-black text-[10px] ml-3">&#8377;<%= event.price %>
                </p>


            </div>


            <!-- Ticket selecting div -->
            <div class="h-63 w-80 border-2  border-[#0f172a] rounded-lg bg-white mt-5 sm:mt-15 ml-12 sm:ml-0">

                <p class="text-s text-black ml-3 mt-2">Select Tickets</p>
                <p class="text-xs text-black ml-3">You can add upto 10 Tickets</p>

                <section class="bg-gray-300 border-2 rounded-lg w-75 h-15 mt-6 flex justify-between ml-2">
                    <div>
                        <p class="text-black text-[15px] ml-2 mt-2">Ticket for 1 </p>
                        <p class=" text-black text-xs ml-2">₹<span class="amnt1">
                                <%= parseInt(event.price) %>
                            </span></p>
                    </div>
                    <button
                        class=" add1 border-2 border-[#ec4899] rounded-lg w-17 h-8 text-[#ec4899] mt-3 mr-1 cursor-pointer">Add</button>



                </section>


                <section class="bg-gray-300 border-2 rounded-lg w-75 h-15 mt-2 flex justify-between ml-2">
                    <div>
                        <p class="text-black text-[15px] ml-2 mt-2">Ticket for 2 </p>
                        <p class=" text-black text-xs ml-2">₹<span class="amnt2">
                                <%= parseInt(event.price)*1.75 %>
                            </span> |<span class="text-amber-600"> Fast
                                filling</span>
                        </p>
                    </div>
                    <button
                        class="add2 border-2 border-[#ec4899] rounded-lg w-17 h-8 text-[#ec4899] mt-3 mr-1 cursor-pointer">Add</button>

                    <!-- <button
                        class="add1-btn border-2 border-[#ec4899] rounded-lg w-17 h-8 text-[#ec4899] mt-3 mr-1 cursor-pointer">
                        Add
                    </button>
                    <div class="add1-controls hidden flex justify-evenly">
                        <span class="decr1 cursor-pointer">-</span>
                        <span class="count1">0</span>
                        <span class="incr1 cursor-pointer">+</span>
                    </div> -->





                </section>

            </div>
        </div>
        <div class="bg-[#0f172a] h-10 mt-55 sm:mt-10.5 flex gap-x-15 ml-0">
            <p class=" total ml-35 sm:ml-55 mt-2">0</p>
            <button class=" proceed bg-[#ec4899] rounded-lg w-22 h-7 ml-[-3] sm:ml-40 mt-1">Proceed</button>
        </div>
    </main>
</body>

<script src="/views/07_booking.js"></script>

</html>