            <li class="text-2xl ml-4 mt-3 "><a href="/rendezShow/events">Events</a></li><br>
            <li class="text-2xl ml-4 mt-3 "><a href="/rendezShow/movie">Movies</a></li><br>
            <li class="text-2xl ml-4 mt-3"><a href="/rendezShow/contact">Contact</a></li><br>
            <li class="text-2xl ml-4 mt-3"><a href="/rendezShow/signup">Signup</a></li>
        </ul>



    </div>
    <!-- Main page -->

    <main class="text-white">
        <div class="mt-15">

            <p class="font-extrabold font-serif ml-5 mt-7 text-2xl searchable">Events near you!</p>
            <div class="ml-5 mt-3">
                <button
                    class="allBut h-[20px] w-[50px] border-0 rounded-3xl bg-white text-pink-500 text-xs">All</button>
                <button
                    class=" fashBut h-[20px] w-[55px] border-0 rounded-3xl bg-white text-pink-500 text-xs">Fashion</button>
                <button
                    class=" sportsBut h-[20px] w-[50px] border-0 rounded-3xl bg-white text-pink-500 text-xs">Sports</button>
                <button
                    class="musicBut h-[20px] w-[55px] border-0 rounded-3xl bg-white text-pink-500 text-xs">Music</button>
                <button
                    class=" enterBut h-[20px] w-[90px] border-0 rounded-3xl bg-white text-pink-500 text-xs">Entertainment</button>

            </div>
            <!-- Div 1 -->
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-7 gap-y-19 ml-3.5 sm:ml-12 mt-8 event_div">
                <% arr.forEach(events=> { %>


                    <section class="eventSection " data-category="<%= events.category %>">

                        <img src="/uploads/<%= events.thumbnail %>" alt="img"
                            class="mt-1 border-1 border-white border-solid rounded-lg w-[170px] h-[230px] object-cover ">
                        <div class="w-[170px] h-auto ">
                            <p class="font-bold text-s text-white searchable ml-1">
                                <%= events.name %>
                            </p>

                            </p>
                            <p class="font-light text-gray-400 text-[8px] mt-1 ml-1 searchable break-words ">
                                <%= events.description %>
                            </p>



                            <button
                                class="butt text-xs bg-white h-[21px] w-[80px] text-[#45637d] mt-2 cursor-pointer ml-1 searchable"
                                data-id="<%= events.id %>">Book tickets</button>
                        </div>



                    </section>
                    <% }); %>
                        <p id="msg" class="hidden ml-24 sm:ml-60 mt-15 text-[#666666] w-50 h-45">
                            No events at the moment
                        </p>






            </div>
            <!-- <hr class="border-t-1 border-gray-400 my-4 mt-15"> -->



    </main>

    <!-- Footer -->

    <footer>
